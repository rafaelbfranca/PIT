<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_tela_h_meus_palpites"
    android:focusableInTouchMode="true"
    tools:context="com.jockerbitgames.palpitedobrasileirao.H_meus_palpites_serie_B"
    tools:ignore="Overdraw">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adsPalpitesSerieB"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/active_ad_unit_ID_banner_10_meusPalpitesSerieB"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/meus_palpites_serie_b"
        android:textAlignment="center"
        android:textColor="@color/yellow600"
        android:textSize="25sp"
        android:textStyle="bold"
        android:background="#55000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#55000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/outra_serie"
            android:textColor="@color/cor_text_palpites"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/dropdown_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:layout_marginStart="5dp"
            android:spinnerMode="dropdown"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="#55000000">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/time_campeao_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/time_campeao"
                android:textColor="@color/cor_text_palpites"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/dropdown_time_campeao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/time_campeao_text"
                android:layout_marginStart="5dp"
                android:spinnerMode="dropdown"/>

            <TextView
                android:id="@+id/pontos_campeao_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/time_campeao_text"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/pontos_campeao"
                android:textColor="@color/cor_text_palpites"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edit_pontos_campeao"
                android:contentDescription="@string/palpitePontosTimeCampeao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background_normal"
                android:layout_toEndOf="@id/time_campeao_text"
                android:layout_below="@id/time_campeao_text"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="35dp"
                tools:ignore="Autofill,LabelFor"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:cursorVisible="false">
            </EditText>

            <TextView
                android:id="@+id/saldo_campeao_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pontos_campeao_text"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/saldo_campeao"
                android:textColor="@color/cor_text_palpites"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edit_saldo_campeao"
                android:contentDescription="@string/palpiteSaldoTimeCampeao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background_normal"
                android:layout_toEndOf="@id/time_campeao_text"
                android:layout_below="@id/pontos_campeao_text"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="35dp"
                tools:ignore="Autofill,LabelFor"
                android:inputType="numberSigned"
                android:selectAllOnFocus="true"
                android:cursorVisible="false">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/saldo_campeao_text"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/acesso"
                android:textColor="@color/cor_text_palpites"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/dropdown_acesso01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:layout_toEndOf="@id/time_campeao_text"
                android:layout_below="@id/saldo_campeao_text"
                android:layout_marginStart="5dp"
                android:spinnerMode="dropdown"/>

            <Spinner
                android:id="@+id/dropdown_acesso02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:layout_toEndOf="@id/time_campeao_text"
                android:layout_below="@id/dropdown_acesso01"
                android:layout_marginStart="5dp"
                android:spinnerMode="dropdown"/>

            <Spinner
                android:id="@+id/dropdown_acesso03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:layout_toEndOf="@id/time_campeao_text"
                android:layout_below="@id/dropdown_acesso02"
                android:layout_marginStart="5dp"
                android:spinnerMode="dropdown"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dropdown_acesso03"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/rebaixados"
                android:textColor="@color/cor_text_palpites"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/dropdown_rebaixado01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:layout_toEndOf="@id/time_campeao_text"
                android:layout_below="@id/dropdown_acesso03"
                android:layout_marginStart="5dp"
                android:spinnerMode="dropdown"/>

            <Spinner
                android:id="@+id/dropdown_rebaixado02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:layout_toEndOf="@id/time_campeao_text"
                android:layout_below="@id/dropdown_rebaixado01"
                android:layout_marginStart="5dp"
                android:spinnerMode="dropdown"/>

            <Spinner
                android:id="@+id/dropdown_rebaixado03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:layout_toEndOf="@id/time_campeao_text"
                android:layout_below="@id/dropdown_rebaixado02"
                android:layout_marginStart="5dp"
                android:spinnerMode="dropdown"/>
<!--
            <Spinner
                android:id="@+id/dropdown_rebaixado04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:layout_toEndOf="@id/time_campeao_text"
                android:layout_below="@id/dropdown_rebaixado03"
                android:layout_marginStart="5dp"
                android:spinnerMode="dropdown"/>
-->
            <TextView
                android:id="@+id/time_lanterna_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dropdown_rebaixado03"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/time_lanterna"
                android:textColor="@color/cor_text_palpites"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/dropdown_time_lanterna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:layout_toEndOf="@id/time_campeao_text"
                android:layout_below="@id/dropdown_rebaixado03"
                android:layout_marginStart="5dp"
                android:spinnerMode="dropdown"/>

            <TextView
                android:id="@+id/pontos_lanterna_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/time_lanterna_text"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/pontos_lanterna"
                android:textColor="@color/cor_text_palpites"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edit_pontos_lanterna"
                android:contentDescription="@string/palpitePontosTimeLanterna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background_normal"
                android:layout_toEndOf="@id/time_campeao_text"
                android:layout_below="@id/time_lanterna_text"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="35dp"
                tools:ignore="Autofill,LabelFor"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:cursorVisible="false">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pontos_lanterna_text"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/saldo_lanterna"
                android:textColor="@color/cor_text_palpites"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edit_saldo_lanterna"
                android:contentDescription="@string/palpiteSaldoTimeLanterna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background_normal"
                android:layout_toEndOf="@id/time_campeao_text"
                android:layout_below="@id/pontos_lanterna_text"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="35dp"
                tools:ignore="Autofill,LabelFor"
                android:inputType="numberSigned"
                android:selectAllOnFocus="true"
                android:cursorVisible="false">
            </EditText>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="15dp">

        <ImageButton
            android:contentDescription="@string/palpitar_jogos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_palpitar_jogos"
            android:onClick="buttonPalpitarJogos"
            tools:ignore="UsingOnClickInXml" />
    </RelativeLayout>

</LinearLayout>

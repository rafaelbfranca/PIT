<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_tela_a_tela_inicial"
    tools:context="com.jockerbitgames.palpitedobrasileirao.A_tela_inicial"
    tools:ignore="Overdraw">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adsTelaInicial"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/active_ad_unit_ID_banner_1_telaInicial"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/tela_inicial"
        android:textColor="#42A5F5"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/seus_pontos"
        android:textColor="#42A5F5"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:stretchColumns="0,1,2,3,4"
        android:padding="5dp">
        <TableRow
            android:layout_gravity="center_horizontal"
            tools:ignore="UselessParent">
            <TextView
                android:layout_span="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginStart="15dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/escolher_o_ano"
                android:textColor="#42A5F5"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/dropdown_ano_spinner"
                android:layout_span="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:background="@android:drawable/btn_dropdown"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="35dp"
                android:spinnerMode="dropdown"/>
        </TableRow>
    </TableLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:stretchColumns="0,1,2,3,4"
            android:padding="5dp">
            <TableRow
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/serie_a"
                    android:textColor="#42A5F5"
                    android:textSize="30sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/total_pontos_SerieA"
                    android:textAlignment="center"
                    android:layout_marginStart="20dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/campo_nulo"
                    android:textColor="#42A5F5"
                    android:textSize="30sp"
                    android:textStyle="bold"/>
                <ImageButton
                    android:contentDescription="@string/detalhado_serie_a"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_detalhado"
                    android:onClick="buttonDetalhado"
                    tools:ignore="UsingOnClickInXml" />
            </TableRow>
            <TableRow
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/serie_b"
                    android:textColor="#42A5F5"
                    android:textSize="30sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/total_pontos_SerieB"
                    android:textAlignment="center"
                    android:layout_marginStart="20dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/campo_nulo"
                    android:textColor="#42A5F5"
                    android:textSize="30sp"
                    android:textStyle="bold"/>
                <ImageButton
                    android:contentDescription="@string/detalhado_serie_b"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_detalhado"
                    android:onClick="buttonDetalhado"
                    tools:ignore="UsingOnClickInXml" />
            </TableRow>
            <TableRow
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/serie_c"
                    android:textColor="#42A5F5"
                    android:textSize="30sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/total_pontos_SerieC"
                    android:textAlignment="center"
                    android:layout_marginStart="20dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/campo_nulo"
                    android:textColor="#42A5F5"
                    android:textSize="30sp"
                    android:textStyle="bold"/>
                <ImageButton
                    android:contentDescription="@string/detalhado_serie_c"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_detalhado"
                    android:onClick="buttonDetalhado"
                    tools:ignore="UsingOnClickInXml" />
            </TableRow>
            <TableRow
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/serie_d"
                    android:textColor="#42A5F5"
                    android:textSize="30sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/total_pontos_SerieD"
                    android:textAlignment="center"
                    android:layout_marginStart="20dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/campo_nulo"
                    android:textColor="#42A5F5"
                    android:textSize="30sp"
                    android:textStyle="bold"/>
                <ImageButton
                    android:contentDescription="@string/detalhado_serie_d"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_detalhado"
                    android:onClick="buttonDetalhado"
                    tools:ignore="UsingOnClickInXml" />
            </TableRow>
        </TableLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:padding="10dp">
        <ImageButton
            android:contentDescription="@string/meus_grupos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_meus_grupos"
            android:onClick="buttonMeusGrupos"
            tools:ignore="UsingOnClickInXml" />

        <ImageButton
            android:contentDescription="@string/meus_palpites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_meus_palpites"
            android:onClick="buttonMeusPalpites"
            tools:ignore="UsingOnClickInXml" />
    </LinearLayout>
</LinearLayout>
